<Window x:Class="Bai2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bai2"
        mc:Ignorable="d"
        Title="Bai2" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit"></MenuItem>
                <MenuItem Header="_New" Click="MenuItem_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Manage user">
                    <MenuItem.Icon>
                        <Image Source="/Image/user.png"></Image>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Show group" IsCheckable="True" IsChecked="True"></MenuItem>
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
